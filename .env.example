# Database
CONNECTION_STRING="Data Source=../../database/taskmanagement.db"

# Authentication
JWT_SECRET="super-secret-key-for-development-only"
JWT_ISSUER="TaskManagementSystem"
JWT_AUDIENCE="TaskManagementSystemUsers"
JWT_EXPIRY_DAYS=14

# Google Authentication
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# Admin User
ADMIN_EMAIL="admin@taskmanagement.com"
ADMIN_PASSWORD="Admin123!"

# API Configuration
API_PORT=5000
API_HOST=localhost
BLAZOR_PORT=5010
BLAZOR_HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:5010,https://localhost:5010,http://localhost:5011,https://localhost:5011"

# Identity Settings
REQUIRE_UNIQUE_EMAIL=true
REQUIRE_CONFIRMED_ACCOUNT=false
REQUIRE_CONFIRMED_EMAIL=false
PASSWORD_REQUIRE_CONFIRMED_ACCOUNT=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NON_ALPHANUMERIC=true
PASSWORD_MIN_LENGTH=8
LOCKOUT_DURATION_MINUTES=15
MAX_FAILED_ATTEMPTS=5
COOKIE_NAME="TaskManagementAuth"